---
import Layout from '../layouts/Layout.astro'
import BackgroundVideo from '../components/Home/BackgroundVideo.svelte'
import AboutHome from '../components/Home/AboutHome.svelte'
import Reviews from '../components/Home/Reviews/index.svelte'
import ServicesHome from '../components/Home/ServicesHome.astro'
import MeetTeam from '../components/Home/MeetTeam.astro'
import HospitalHome from '../components/Home/HospitalHome.svelte'
---

<Layout title="Bircan Veteriner Kliniği - İzmir / Örnekköy">
	<main>
		<section id="intro-desktop" class="pt-[100px] lg:pt-[155px] mdMax:hidden">
			<div class="relative">
				<div class="z-0">
					<BackgroundVideo client:only="svelte" />
				</div>
				<div
					class="absolute z-20 ml-[15%] max-w-[470px] border-8 border-white bg-white/90 py-6 lg:mt-20 mdMax:hidden xlMax:ml-[5%]"
				>
					<div class="">
						<h1 class="px-9 text-xxl font-bold tracking-wide text-primary-500">
							Dört Patiye Dört Dörtlük Bakım!
						</h1>
						<p class="mt-3 px-9 text-xsbase text-black">
							Hoş Geldiniz! 2015 yılında kurulan Bircan Veteriner, İzmir'in Örnekköy semtinde evcil
							hayvanlarınız için üst düzey bir tıp merkezi olarak hizmet veriyor.
						</p>
						<div class="mt-6 px-9">
							<a
								href="/iletisim"
								class="inline-block rounded-md bg-second-500 px-6 py-3 text-xbase font-medium uppercase tracking-wide text-white transition-colors duration-300 hover:bg-second-600"
							>
								Randevu Al
							</a>
						</div>
					</div>
				</div>
			</div>
		</section>
		<AboutHome client:only="svelte" />
		<ServicesHome />
		<MeetTeam />
		<Reviews client:only="svelte" />
		<HospitalHome client:only="svelte" />
	</main>
</Layout>
